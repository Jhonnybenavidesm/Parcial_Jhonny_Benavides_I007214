<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="wrap_content"
    android:layout_margin="10dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comentarios(4)"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imagen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/profile2"
                android:layout_below="@+id/texto"/>

            <TextView
                android:id="@+id/texto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imagen2"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="19dp"
                android:layout_toRightOf="@+id/imagen"
                android:text="No solo sobrevivi 500 años." />

            <ImageView
                android:id="@+id/imagen2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/profile2"
                android:layout_below="@+id/imagen"/>

            <TextView
                android:id="@+id/texto3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/texto2"
                android:layout_alignStart="@+id/texto2"
                android:layout_below="@+id/texto2"
                android:layout_marginTop="14dp"
                android:text="No sobrevive 500 años." />

            <ImageView
                android:id="@+id/imagen3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/profile2"
                android:layout_below="@+id/imagen2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/texto3"
                android:layout_below="@+id/texto3"
                android:layout_marginTop="14dp"
                android:text="No sobrevive 500 años." />

        </RelativeLayout>


</android.support.v7.widget.CardView>